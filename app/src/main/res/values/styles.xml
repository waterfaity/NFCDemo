<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#0b8f64</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMain</item>
        <item name="colorPrimary">@color/colorPrimaryMain</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/colorPrimaryMain</item>
    </style>

    <style name="dialog" parent="Base.Theme.AppCompat.Dialog">

        <item name="colorPrimaryDark">@color/colorPrimaryDarkMain</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--背景半透明-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog3" parent="Base.Theme.AppCompat.Dialog">

        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorButtonNormal">@color/colorPrimaryMain</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMain</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--背景半透明-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog2" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--全屏-->
        <item name="android:windowFullscreen">true</item>
        <!--背景半透明-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
